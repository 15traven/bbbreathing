---
import '../styles/index.css'
import Layout from '../layouts/Layout.astro'
---

<Layout>
	<div class="wrapper">
		<main class="main">
			<div id="main-screen">
				<button id="start-button">Start</button>
			</div>
			<div id="exercise-screen">
				<div class="box-animated">
					<div class="side bottom"></div>
					<div class="side right"></div>
					<div class="side top"></div>
					<div class="side left"></div>
				</div>
			
				<div class="placeholder">
					<p class="hint top">Breath out</p>
					<p class="hint left">Hold</p>
					<div class="box-path"></div>
					<p class="hint right">Hold</p>
					<p class="hint bottom">Breath in</p>
				</div>
			</div>
		</main>
	</div>
</Layout>

<script is:inline>
	const startExercise = () => {
		console.log('start')
		const mainSreen = document.getElementById('main-screen')
		const exerciseScreen = document.getElementById('exercise-screen')

		mainSreen.style.display = 'none'
		exerciseScreen.style.display = 'block'
	}

	document.getElementById('start-button')?.addEventListener('click', startExercise)
</script>